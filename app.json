{
  "expo": {
    "name": "digital-receipt-app",
    "slug": "digital-receipt-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./app/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Digital Receipt Mobile App to access your photos.",
          "savePhotosPermission": "Allow Digital Receipt Mobile App to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {}
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": ["READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
    },
    "web": {
      "favicon": "./app/assets/favicon.png"
    }
  }
}
